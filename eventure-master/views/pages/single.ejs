<div class="create-wrapper">

    <% if(success.length > 0){ %>
        <div class="">

            <%= success %>
        </div>
        <% } %>

            <h1>Event Detail</h1>
            <div class="event-settings">
                <div class="left-side">

                    <div class="form-group">
                        <h3>Title</h3>
                        <p>
                            <%= event.title %>
                        </p>
                    </div>
                    <div class="form-group">
                        <h3>Description</h3>
                        <p>
                            <%= event.description %>
                        </p>

                    </div>
                    <div class="form-group date-group">
                        <div class="date">
                            <h3>Day</h3>
                            <p>
                                <%= event.day %>
                            </p>
                        </div>
                        <div class="from-hourFrom">
                            <h3>From</h3>
                            <p>
                                <%= event.hour %>
                            </p>
                        </div>
                        <div class="toHour" style="margin-right: 50px">
                            <h3>To</h3>
                            <p>
                                <%= event.toHour %>
                            </p>
                        </div>
                    </div>
                    <div class="location">
                        <h3>Location</h3>
                        <input name="location" id="pac-input" class="controls" type="text" placeholder="Search Box" value="<%= event.location %>">
                        <div id="map"></div>
                    </div>

                </div>
                <div class=" right-side ">
                    <div class="mail-container ">

                    </div>
                    <div class="people-sended ">
                        <h5>Guest List</h5>
                        <% event.email.forEach(function(email, index) { %>
                            <p>
                                <%= event.email[index] %>
                            </p>
                            <% }) %>
                    </div>
                </div>
            </div>
</div>