<div class="login-wrapper">
    <div class="login-box login-box-signup">
        <img src="img/logoLogin.png" alt="">
        <form action="/signup" method="POST">
            <div class="form-group <%= typeof error != 'undefined' && error.username ? 'has-error' : '' %>">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                    <input style="margin-bottom:-15px" type="text" name="username" class="form-control" placeholder="Username" value="<%= typeof user != 'undefined' && user.username ? user.username : '' %>">
                </div>
                <% if (typeof(error) != 'undefined' && error.username) { %>
                    <label class="control-label">
                        <%= error.username %>
                    </label>
                    <% } %>
            </div>
            <div class="form-group <%= typeof error != 'undefined' && error.email ? 'has-error' : '' %>">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                    <input style="margin-bottom:-15px" type="text" name="email" class="form-control" placeholder="Email" value="<%= typeof user != 'undefined' && user.email ? user.email : '' %>">
                </div>
                <% if (typeof(error) != 'undefined' && error.email) { %>
                    <label class="control-label">
                        <%= error.email %>
                    </label>
                    <% } %>
            </div>
            <div class="form-group <%= typeof error != 'undefined' && error.password ? 'has-error' : '' %>">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" name="password" class="form-control" placeholder="Password">
                </div>
                <% if (typeof(error) != 'undefined' && error.password) { %>
                    <label class="control-label">
                        <%= error.password %>
                    </label>
                    <% } %>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-block btn-primary">Signup</button>
            </div>
        </form>
    </div>
</div>